<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.facebook"
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <!--
 Keyframes requires API level 15 and without this the build will fail,
         version checking is performed in runtime instead.
    -->
    <uses-sdk tools:overrideLibrary="com.facebook.keyframes"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".fresco.samples.showcase.ShowcaseApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".fresco.samples.showcase.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".fresco.samples.showcase.MyActivity">

        </activity>
    </application>

</manifest>